{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/auth/(.*)", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/server.js" }
  ],
  "functions": {
    "server.js": {
      "includeFiles": "public/**"
    }
  },
  "crons": [
    { "path": "/api/cron/refresh-pool", "schedule": "0 0 */3 * *" }
  ]
}

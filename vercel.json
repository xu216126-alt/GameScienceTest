{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "public/**"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/auth/(.*)", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/server.js" }
  ],
  "crons": [
    { "path": "/api/cron/refresh-pool", "schedule": "0 0 */3 * *" },
    { "path": "/api/cron/sync-store-meta", "schedule": "0 0 * * *" },
    { "path": "/api/cron/sync-steamspy", "schedule": "0 0 * * *" }
  ]
}
